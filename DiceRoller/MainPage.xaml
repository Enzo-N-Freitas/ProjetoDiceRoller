<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

    <ScrollView>
        
        <VerticalStackLayout
            Spacing = "40"
            Padding = "30,0"
            VerticalOptions = "Center">

            <Label
                Text = "Rolador de Dados"
                FontSize = "48"
                HorizontalOptions = "Center" />

            <Label
                Text = "0"
                FontSize = "96"
                x:Name = "DiceSum"
                HorizontalOptions = "Center"/>

            <Picker 
                x:Name = "DicePicker"
                HorizontalOptions = "Center"
                Title = "Quantidade de lados:"
                WidthRequest = "250">
                <Picker.ItemsSource>
                    <x:Array Type = "{x:Type x:String}">
                        <x:String>4</x:String>
                        <x:String>6</x:String>
                        <x:String>8</x:String>
                        <x:String>10</x:String>
                        <x:String>12</x:String>
                        <x:String>20</x:String>
                        <x:String>100</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <HorizontalStackLayout
                Spacing = "40"
                Padding = "30,0"
                HorizontalOptions = "Center">

                <Label
                    Text = "Insira a quantidade de dados: "/>

                <Entry
                    Placeholder = "Número de dados"
                    x:Name = "DiceAmount"
                    WidthRequest = "150"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout
                Spacing = "65"
                Padding = "30,0"
                HorizontalOptions = "Center">

                <Label
                    Text = "Selecione um modificador por rolagem: "/>

                <Picker
                    x:Name = "DiceModifier">
                    <Picker.ItemsSource>
                        <x:Array Type = "{x:Type x:String}">
                            <x:String>+1</x:String>
                            <x:String>+2</x:String>
                            <x:String>+3</x:String>
                            <x:String>+4</x:String>
                            <x:String>+5</x:String>
                            <x:String>+6</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

            </HorizontalStackLayout>


            <Button
                Text = "ROLAR O DADO"
                x:Name = "RollerButton"
                Clicked = "RollerButton_Clicked"
                HorizontalOptions = "Center"
                WidthRequest = "150"
                BackgroundColor = "Gray"/>

            <Label
                x:Name = "DiceResults"
                />

        </VerticalStackLayout>

    </ScrollView>
    
</ContentPage>
